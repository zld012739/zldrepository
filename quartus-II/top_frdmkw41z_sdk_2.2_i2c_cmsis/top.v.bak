/////////////////////////////////////////////////////////////////////////////////////////////////////

reg flag_reg;
always @ (negedge bps_start or negedge rst_n)
begin
	if (!rst_n)
		flag_reg <= 1'b0;
	else if (!bps_start)
		flag_reg <= ~flag_reg;
end
assign Flag = flag_reg;

always @ (posedge clk or negedge rst_n)
begin
	if (!rst_n)
		Current <= IDLE;
	else
		Current <= Next;
end

// the state machine for receive data bytes
always @ (*)
begin
	Next = IDLE;
	case (Current)
		IDLE:
			if (rx_data == 8'h24) //$
				Next = S1;
			else
				Next = IDLE;
		S1:
			if (Flag_temp != Flag)
			begin
				if (rx_data != 8'h0d) //\n
					Next = S1;
				else
					Next = SAVE;
			end
			else
				Next = WAIT;
		WAIT:
			if (Flag_temp!=Flag)
			begin
				if (rx_data != 8'h0d)
					Next = S1;
				else
					Next = SAVE;
			end
			else
				Next = WAIT;
		default: Next = IDLE;
	endcase
end

always @ (posedge clk or negedge rst_n)
begin 
	if (!rst_n)
	begin
		Flag_temp <= 1'b0;
	end
	else
	begin
		Flag_temp <= Flag;
	end
end

always @ (posedge clk or negedge rst_n)
begin 
	if(!rst_n)
	begin
		Buff_temp <= `Buff_size'b0;
		Rx_cmd <= `Buff_size'b0;
	end
	else
	begin
		case (Current)	
			IDLE:  
			begin
				Buff_temp <= `Buff_size'b0;
			end
			S1:
			begin
				Buff_temp <= {{Buff_temp[`Buff_size - 9 : 0]}, rx_data};
			end 
			WAIT:
			begin
				Buff_temp <= Buff_temp;
			end 
			SAVE:
			begin
				Rx_cmd  <= Buff_temp[`Buff_size - 9 : 0];
				Buff_temp <= `Buff_size'b0;
			end
			default: 
			begin
			end
		endcase		
	end	
end

always @ (posedge clk or negedge rst_n)
begin
  if(!rst_n)
  begin
    //////////////////add link here////////////////
			linkTSP <= 1'b0;
			linkGLO <= 1'b0;
			linkMCG <= 1'b0;
			linkPMH <= 1'b0;
			linkTSI <= 1'b0;
			linkTCP <= 1'b0;
			linkSPI <= 1'b0;
			linkTPT <= 1'b0;
			linkSSI <= 1'b0;
			linkDSP <= 1'b0;
			linkICR <= 1'b0;
			linkICS <= 1'b0;
			linkTOC <= 1'b0;
			linkTIC <= 1'b0;
			linkICW <= 1'b0;
			linkTDC <= 1'b0;
			linkGII <= 1'b0;
			linkCMP <= 1'b0;

    ///////////////////////////////////////////////
    led <= 1'b0; // for debug led
    linkBIM <= 1'b1;
  end
  else
  begin
    case(Rx_cmd)
    ///////////////////add case here/////////////
      			
      {T,S, P}: //{C,M,D}
      begin
        linkTSP <= 1'b1;

        led <= 1'b1;
      end
      			
      {G,L, O}: //{C,M,D}
      begin
        linkGLO <= 1'b1;

        led <= 1'b1;
      end
      			
      {M,C, G}: //{C,M,D}
      begin
        linkMCG <= 1'b1;

        led <= 1'b1;
      end
      			
      {P,M, H}: //{C,M,D}
      begin
        linkPMH <= 1'b1;

        led <= 1'b1;
      end
      			
      {T,S, I}: //{C,M,D}
      begin
        linkTSI <= 1'b1;

        led <= 1'b1;
      end
      			
      {T,C, P}: //{C,M,D}
      begin
        linkTCP <= 1'b1;

        led <= 1'b1;
      end
      
      {S,P, I}: //{C,M,D}
      begin
        linkSPI <= 1'b1;
			 
        spi_slave_rst_cpha0 <= 1'b1;
        

        led <= 1'b1;
      end
      			
      {T,P, T}: //{C,M,D}
      begin
        linkTPT <= 1'b1;

        led <= 1'b1;
      end
      
      {S,S, I}: //{C,M,D}
      begin
        linkSSI <= 1'b1;
			 
        spi_rst <= 1'b1;
        spi_tx_en <= 1'b1;
        spi_rx_en <= 1'b1;
        mode_select <= 1'b0;
        

        led <= 1'b1;
      end
      			
      {D,S, P}: //{C,M,D}
      begin
        linkDSP <= 1'b1;

        led <= 1'b1;
      end
      
      {I,C, R}: //{C,M,D}
      begin
        linkICR <= 1'b1;
			 
        i2c_rst <= 1'b1;
        RD_EN   <= 1'b1;
        WR_EN   <= 1'b0;
        

        led <= 1'b1;
      end
      
      {I,C, S}: //{C,M,D}
      begin
        linkICS <= 1'b1;
			 
        i2c_rst <= 1'b1;
    

        led <= 1'b1;
      end
      			
      {T,O, C}: //{C,M,D}
      begin
        linkTOC <= 1'b1;

        led <= 1'b1;
      end
      			
      {T,I, C}: //{C,M,D}
      begin
        linkTIC <= 1'b1;

        led <= 1'b1;
      end
      
      {I,C, W}: //{C,M,D}
      begin
        linkICW <= 1'b1;
			 
        i2c_rst <= 1'b1;
        RD_EN   <= 1'b0;
        WR_EN   <= 1'b1;
		

        led <= 1'b1;
      end
      			
      {T,D, C}: //{C,M,D}
      begin
        linkTDC <= 1'b1;

        led <= 1'b1;
      end
      			
      {G,I, I}: //{C,M,D}
      begin
        linkGII <= 1'b1;

        led <= 1'b1;
      end
      			
      {C,M, P}: //{C,M,D}
      begin
        linkCMP <= 1'b1;

        led <= 1'b1;
      end
      
    /////////////////////////////////////////////

      {R,S,T}: //RESET
         begin
           			linkTSP <= 1'b0;
			linkGLO <= 1'b0;
			linkMCG <= 1'b0;
			linkPMH <= 1'b0;
			linkTSI <= 1'b0;
			linkTCP <= 1'b0;
			
        spi_slave_rst_cpha0 <= 1'b0;
        
			linkSPI <= 1'b0;
			linkTPT <= 1'b0;
			
        spi_rst <= 1'b0;
        spi_tx_en <= 1'b0;
        spi_rx_en <= 1'b0;
        mode_select <= 1'b0;
        
			linkSSI <= 1'b0;
			linkDSP <= 1'b0;
			
        i2c_rst <= 1'b0;
        RD_EN   <= 1'b0;
        WR_EN   <= 1'b0;
        
			linkICR <= 1'b0;
			linkICS <= 1'b0;
			linkTOC <= 1'b0;
			linkTIC <= 1'b0;
			linkICW <= 1'b0;
			linkTDC <= 1'b0;
			linkGII <= 1'b0;
			linkCMP <= 1'b0;

            led <= 1'b0;
            linkBIM <= 1'b1;
        end

         default:
         begin
          			linkTSP <= 1'b0;
			linkGLO <= 1'b0;
			linkMCG <= 1'b0;
			linkPMH <= 1'b0;
			linkTSI <= 1'b0;
			linkTCP <= 1'b0;
			
        spi_slave_rst_cpha0 <= 1'b0;
        
			linkSPI <= 1'b0;
			linkTPT <= 1'b0;
			
        spi_rst <= 1'b0;
        spi_tx_en <= 1'b0;
        spi_rx_en <= 1'b0;
        mode_select <= 1'b0;
        
			linkSSI <= 1'b0;
			linkDSP <= 1'b0;
			
        i2c_rst <= 1'b0;
        RD_EN   <= 1'b0;
        WR_EN   <= 1'b0;
        
			linkICR <= 1'b0;
			linkICS <= 1'b0;
			linkTOC <= 1'b0;
			linkTIC <= 1'b0;
			linkICW <= 1'b0;
			linkTDC <= 1'b0;
			linkGII <= 1'b0;
			linkCMP <= 1'b0;

          led <= 1'b0;
          linkBIM <= 1'b1;
      end
    endcase
  end
end


